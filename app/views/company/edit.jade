extends ../layouts/default
block head

    //datepicker 추가
    script(src='/plugins/bootstrap-datepicker/dist/js/bootstrap-datepicker.min.js')
    script(src='/isu/js/search/datepicker.js', type='text/javascript')

    //postcode
    script(src='/isu/js/postcode.js')
    
    //http용
    script(src='http://dmaps.daum.net/map_js_init/postcode.v2.js')
    script(src='https://spi.maps.daum.net/imap/map_js_init/postcode.v2.js')

    script(src='/isu/js/company/edit.js')

block content
    .content-page
        .content
            .container
                .row
                    .col-sm-12
                        .page-title-box
                            ol.breadcrumb.pull-right
                                li
                                    a(href='#') Home
                                li
                                    a(href='#') SD기본정보
                                li.active 회사정보관리
                            h4.page-title 회사정보 수정
                .row
                    .col-sm-12
                        .card-box
                            .p-20
                                .btn-toolbar.form-group
                                    form.form-horizontal.group-border-dashed(name='form' action='/company/#{company._id}/edit' method='post')
                                        .form-group
                                            .pull-left
                                                .btn.btn-primary.waves-effect.waves-light.m-l-5(onclick="location.href='/company'")
                                                    i.fa.fa-list-ul
                                                    |  목록
                                                .btn.btn-inverse.waves-effect.waves-light.m-l-5(onclick="location.href='/company/#{company._id}/delete'") 
                                                    i.fa.fa-remove
                                                    |  삭제
                                            .pull-right
                                                button.btn.btn-primary(type='submit')
                                                    i.fa.fa-send-o
                                                    |  저장
                                        hr
                                        .form-group(id='row_group_flag', style='display:none')
                                            label.col-sm-3.control-label 그룹사여부
                                            .col-sm-4
                                                input#group_flag.form-control(type='hidden', readonly value='#{company.group_flag}', placeholder='')
                                                input#user_flag.form-control(type='hidden', readonly value='#{session.user_flag}', placeholder='')
                                                select.form-control(name='company[group_flag]' type='text' value='#{company.group_flag}')
                                                    option(value='out' selected) 외부고객사
                                                    option(value='in') 그룹사
                                        .form-group
                                            label.col-sm-3.control-label 회사코드
                                            .col-sm-4
                                                input.form-control(type='text', name='company[company_cd]', readonly value='#{company.company_cd}', placeholder='')
                                        .form-group
                                            label.col-sm-3.control-label 회사명
                                            .col-sm-4
                                                input.form-control(type='text', name='company[company_nm]', value='#{company.company_nm}', placeholder='')
                                        .form-group
                                            label.col-sm-3.control-label 업태
                                            .col-sm-4
                                                input.form-control(type='text', name='company[type]', value='#{company.type}',placeholder='')
                                        .form-group
                                            label.col-sm-3.control-label 대표이사명
                                            .col-sm-4
                                                input.form-control(type='text', name='company[ceo_nm]', value='#{company.ceo_nm}', placeholder='')
                                        .form-group
                                            label.col-sm-3.control-label 전화번호
                                            .col-sm-4
                                                input.form-control(type='text', name='company[tel_no]', value='#{company.tel_no}', placeholder='')
                                        .form-group
                                            label.col-sm-3.control-label 팩스번호
                                            .col-sm-4
                                                input.form-control(type='text', name='company[fax_no]', value='#{company.fax_no}',placeholder='')
                                        .form-group
                                            label.col-sm-3.control-label 회사주소1
                                            .col-sm-2
                                                input.form-control(type='text', id='zip_cd' name='company[zip_cd]', value='#{company.zip_cd}',placeholder='')
                                            .col-sm-5
                                                input.form-control(type='text', id='addr' name='company[addr]', readonly value='#{company.addr}',placeholder='')
                                            .col-sm-2
                                                span.btn.btn-sm.btn-primary(id='postcode') 우편번호 찾기
                                        .form-group
                                            label.col-sm-3.control-label 회사주소2
                                            .col-sm-7
                                                input.form-control(type='text', id='addr2' name='company[addr2]', value='#{company.addr2}',placeholder='')
                                        .form-group
                                            label.col-sm-3.control-label 비고
                                            .col-sm-7
                                                input.form-control(type='text', name='company[bigo]', value='#{company.bigo}',placeholder='')
                                        .form-group
                                            label.col-sm-3.control-label 유지보수 기간
                                            .col-sm-3
                                                .input-group
                                                    input.form-control(id='date_from', name='company[date_from]', type='text', placeholder='yyyy-mm-dd', value='#{company.date_from}')
                                                    span.input-group-addon.bg-primary.b-0.text-white
                                                        i.ion-calendar
                                            .col-sm-3
                                                .input-group
                                                    input.form-control(id='date_to', name='company[date_to]', type='text', placeholder='yyyy-mm-dd', value='#{company.date_to}')
                                                    span.input-group-addon.bg-primary.b-0.text-white
                                                        i.ion-calendar 