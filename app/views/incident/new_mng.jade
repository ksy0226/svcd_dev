block content
    .content-page
        .content
            .container
                .row
                    .col-sm-12
                        .page-title-box
                            ol.breadcrumb.pull-right
                                li
                                    a(href='/index') Home
                                li
                                    a(href='/incident/new') SD담당자
                                li.active 상담접수(전화)
                            h4.page-title 상담접수(전화)
                .row
                    .col-sm-12
                        .btn-toolbar.m-t-10(role='toolbar')
                            .pull-right
                                button#saveBtn.btn.btn-primary.waves-effect.waves-light.m-r-5(type='button')
                                    span 저장
                                    i.fa.fa-send.m-l-10
                .row
                    .col-lg-12.m-t-10
                        .card-box
                            .p-20
                                form.form-horizontal.group-border-dashed(id='form' name='form' action='/incident/new_mng' method='post' enctype="multipart/form-data")  
                                    .form-group
                                        label.col-sm-2.control-label 요청자명
                                        .col-sm-4
                                            input#request_info.form-control(type='text', name='request_info', style = "ime-mode:active", required)
                                            input.form-control(type='hidden', name='incident[request_company_cd]')
                                            input.form-control(type='hidden', name='incident[request_company_nm]')
                                            input.form-control(type='hidden', name='incident[request_dept_cd]')
                                            input.form-control(type='hidden', name='incident[request_dept_nm]')
                                            input.form-control(type='hidden', name='incident[request_position_nm]')
                                            input.form-control(type='hidden', name='incident[request_id]')
                                            input.form-control(type='hidden', name='incident[request_email]')
                                            input.form-control(type='hidden', name='incident[request_hp_telno]')
                                            input.form-control(type='hidden', name='incident[request_office_tel_no]')
                                            input.form-control(type='hidden', name='incident[request_nm]')
                                        label.col-sm-2.control-label 긴급구분
                                        .col-sm-2
                                            select.form-control(name='incident[process_speed]')
                                                option(value='N') 보통
                                                option(value='Y') 긴급     
                                    .form-group(id='app_menu', style='display:none')
                                        label.col-sm-2.control-label 문의요청 화면
                                        .col-sm-10
                                            input.form-control(type='text', name='incident[app_menu]', placeholder='인사관리>발령정보>발령처리' )                 
                                    .form-group
                                        label.col-sm-2.control-label 업무구분
                                        .col-sm-4
                                            input#higher_nm.form-control(type='hidden' name='incident[higher_nm]')
                                            select#higher_cd.form-control(name='incident[higher_cd]')
                                                option(value ='') 선택하세요
                                                //- if (companyProcess.length > 0) {
                                                    - for( var i = 0 ; length = companyProcess.length > i ; i++ ){ //속도가 느리다고 알고 있음.
                                                        option(value ='#{companyProcess[i].higher_cd}') #{companyProcess[i].higher_nm}
                                                    - }
                                                //- }
                                        label.col-sm-2.control-label 요청완료일
                                        .col-sm-4
                                            .input-group
                                                .input-group
                                                    input#datepicker-rcd.form-control(type='text', placeholder='yyyy/mm/dd', name='incident[request_complete_date]')
                                                    span.input-group-addon.bg-primary.b-0.text-white
                                                        i.ion-calendar
                                    .form-group
                                        label.col-sm-2.control-label 제목
                                        .col-sm-10
                                            input.form-control(type='text', name='incident[title]', style = "ime-mode:active", required)
                                    .form-group
                                        .col-sm-12
                                            textarea#summernote.summernote(name='incident[content]')
                                    .row
                                        .col-md-12.portlets
                                            .m-b-30
                                                 input#attach-file.file(name='incident[attach-file]', type='file', data-show-preview='false', data-show-upload='false', multiple)
