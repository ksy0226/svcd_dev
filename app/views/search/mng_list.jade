                                table.table.table-bordered.m-t-0
                                    colgroup
                                        col(width='20%')
                                        col(width='30%')
                                        col(width='20%')
                                        col(width='30%')
                                    tbody
                                        tr
                                            th.bg-muted 처리담당자
                                            td#_manager_nm
                                            th.bg-muted 접수일
                                            td#_receipt_date
                                        tr
                                            th.bg-muted 완료예정일
                                            td#_complete_reserve_date
                                            th.bg-muted 난이도
                                            td
                                                span#_business_level.badge.badge-danger
