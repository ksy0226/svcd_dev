                    .row
                        .col-lg-12
                            .btn-toolbar.m-t-10(role='toolbar')
                                .pull-left                               
                                    button.btn.btn-primary.waves-effect.waves-light.m-l-5(type='button', onClick="javascript:$('#wdetail_modal').modal('hide')")
                                        i.fa.fa-bars
                                        | 목록
                    .row
                        .col-sm-12.m-t-20
