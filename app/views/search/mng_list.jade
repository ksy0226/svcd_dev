                                            th.bg-muted 처리내용
                                            td#_complete_content(colspan='3')

                                        tr
                                            th.bg-muted 처리완료일
                                            td#_complete_date
                                            th.bg-muted 처리소요시간
                                            td#_need_minute
                                                //i.fa.fa-clock-o.text-muted
