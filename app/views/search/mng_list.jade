                                        col(width='20%')
                                        col(width='30%')
                                    tbody
                                    tr
                                        th.bg-muted 진행상태
                                            td
                                                span#_status_nm
                                        th.bg-muted 긴급구분
                                            td#_process_speed
                                    tr
                                        th.bg-muted 상위업무
                                        td#_higher_nm
                                        th.bg-muted 하위업무
