extends ../layouts/default
block head
        link(href='/vendor/fileupload/css/fileinput.css', media='all', rel='stylesheet', type='text/css')
        link(href='/vendor/fileupload/themes/explorer/theme.css', media='all', rel='stylesheet', type='text/css')
        script(src='/vendor/fileupload/js/plugins/sortable.js', type='text/javascript')
        script(src='/vendor/fileupload/js/fileinput.js', type='text/javascript')
        script(src='/vendor/fileupload/js/locales/kr.js', type='text/javascript')
        script(src='/vendor/fileupload/themes/explorer/theme.js', type='text/javascript')

block content
    .masthead.clearfix
        .inner
            h3.masthead-brand 티켓등록
            nav
                ul.nav.masthead-nav
                    li.active
                        a(href='/question') 목록
                
            form.form.col-md-12.center-block(name='form' action='/question/new' method='post')
                .form-group
                    input.form-control.input-lg(type='text' placeholder='Title' name='question[title]' required value='')
                .form-group
                    input.form-control.input-lg(type='text' placeholder='작성자명' name='question[name]' value='')
                .form-group
                    input.form-control.input-lg(type='email' placeholder='e-mail' name='question[email]' value='')
                .form-group
                    input.form-control.input-lg(type='text' placeholder='아이디' name='question[user_id]' value='')
                .form-group
                    textarea.form-control.textarea(placeholder='내용' name='question[content]' style='height:150px' value='')
                .form-group
                    button.btn.btn-success.btn-lg.btn-block(type='submit') 저장
                .form-group
                    input.form-control.input-lg(type='hidden'  name='etcInfo[name]' value='Mr.Lee')
                .form-group
                    input.form-control.input-lg(type='hidden'  name='etcInfo[age]' value='22')

            form(enctype='multipart/form-data')
                hr
                .form-group
                input#attach-file.file(name='file-fr[]', type='file', multiple='')
                hr  
            script.
                $('#attach-file').fileinput({
                    language: 'ko',
                    uploadUrl: '#',
                    overwriteInitial: false,
                    maxFileSize: 1000,
                    maxFilesNum: 10
                    });